@inherits LayoutComponentBase

<MudThemeProvider Theme="temaAtual" />
<MudSnackbarProvider />
<MudDialogProvider />

<style>
    .mudblazor-appbar-brand-text {
        letter-spacing: .5rem;
        font-weight: 300;
        margin-left: 12px;
        user-select: none;
    }

    @@media(max-width:400px) {
        .mudblazor-appbar-brand-text {
            letter-spacing: .25rem;
        }
    }
</style>

<MudLayout>
    <MudAppBar Elevation="1">
        @*<MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@AbrirDrawer" />*@
        <MudHidden Breakpoint="Breakpoint.SmAndDown">
            <MudText Typo="Typo.h6" Class="mudblazor-appbar-brand-text">EDM Data Monitor</MudText>
        </MudHidden>
        <MudHidden Breakpoint="Breakpoint.MdAndUp">
            <MudText Typo="Typo.subtitle2" Class="mudblazor-appbar-brand-text">EDM Data Monitor</MudText>
        </MudHidden>
        <MudSpacer />
        
        <MudHidden Breakpoint="Breakpoint.SmAndDown">
            <MudTooltip Text="Modo Claro/Escuro">
                <MudIconButton Icon="@Icons.Filled.Brightness4" Color="Color.Inherit" OnClick="((e) => DarkMode())" />
            </MudTooltip>
            <LoginDisplay />
        </MudHidden>
        <MudHidden Breakpoint="Breakpoint.MdAndUp">
            <MudMenu Icon="@Icons.Filled.MoreVert" Color="Color.Inherit">
                <LoginDisplay />
                <MudMenuItem OnClick="((e) => DarkMode())">Modo Claro/Escuro</MudMenuItem>
            </MudMenu>
        </MudHidden>
    </MudAppBar>

    <MudDrawer @bind-Open="@aberto" Elevation="1" Variant="@DrawerVariant.Temporary">
        <MudDrawerHeader>
            <MudHidden Breakpoint="Breakpoint.SmAndDown">
                <MudText Typo="Typo.h6" ed>EDM Data Monitor</MudText>
            </MudHidden>
            <MudHidden Breakpoint="Breakpoint.MdAndUp">
                <MudText Typo="Typo.subtitle2">EDM Data Monitor</MudText>
            </MudHidden>
        </MudDrawerHeader>
        <MudNavMenu>
            <MudNavLink Href="/">Home</MudNavLink>
            <MudNavLink>Configurações</MudNavLink>
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent Class="px-2 px-sm-4 px-md-16 mt-md-4 mt-sm-4 mt-2">
        @Body
    </MudMainContent>
</MudLayout>